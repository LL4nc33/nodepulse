<div class="tab-content" id="tab-services">
  <!-- Summary Cards -->
  <div class="services-summary" id="services-summary">
    <div class="summary-card">
      <span class="summary-value" id="services-total">-</span>
      <span class="summary-label">Gesamt</span>
    </div>
    <div class="summary-card">
      <span class="summary-value" id="services-running">-</span>
      <span class="summary-label">Running</span>
    </div>
    <div class="summary-card">
      <span class="summary-value" id="services-exited">-</span>
      <span class="summary-label">Exited</span>
    </div>
    <div class="summary-card">
      <span class="summary-value" id="services-failed">-</span>
      <span class="summary-label">Failed</span>
    </div>
  </div>

  <!-- Actions -->
  <div class="services-actions">
    <button class="btn" onclick="loadServices(<%= node.id %>)">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="23 4 23 10 17 10"/><polyline points="1 20 1 14 7 14"/>
        <path d="m3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
      </svg>
      Aktualisieren
    </button>
  </div>

  <!-- Filter -->
  <div class="services-filter">
    <input type="text" id="services-search" placeholder="Service suchen..." onkeyup="filterServices()">
    <select id="services-status-filter" onchange="filterServices()">
      <option value="">Alle Status</option>
      <option value="running">Running</option>
      <option value="exited">Exited</option>
      <option value="failed">Failed</option>
      <option value="dead">Dead</option>
    </select>
  </div>

  <!-- Services List -->
  <div class="services-list" id="services-list">
    <div class="loading-placeholder">
      <span class="spinner"></span>
      <span>Services werden geladen...</span>
    </div>
  </div>
</div>
