<!-- Tab Navigation mit SVG-Icons -->
<div class="tabs">
  <!-- Übersicht Tab -->
  <button class="tab-btn active" data-tab="overview">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="7" height="7"/>
      <rect x="14" y="3" width="7" height="7"/>
      <rect x="14" y="14" width="7" height="7"/>
      <rect x="3" y="14" width="7" height="7"/>
    </svg>
    <span class="tab-label">Übersicht</span>
  </button>

  <!-- Hardware Tab -->
  <button class="tab-btn" data-tab="hardware">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="2" y="3" width="20" height="14" rx="2"/>
      <line x1="8" y1="21" x2="16" y2="21"/>
      <line x1="12" y1="17" x2="12" y2="21"/>
    </svg>
    <span class="tab-label">Hardware</span>
  </button>

  <!-- Discovery Tab -->
  <button class="tab-btn" data-tab="discovery">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="11" cy="11" r="8"/>
      <path d="m21 21-4.35-4.35"/>
    </svg>
    <span class="tab-label">Discovery</span>
  </button>

  <!-- Docker Tab (conditional) -->
  <% if (discovery && discovery.has_docker) { %>
    <button class="tab-btn" data-tab="docker">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="6" width="20" height="12" rx="2"/>
        <line x1="12" y1="6" x2="12" y2="2"/>
        <circle cx="12" cy="2" r="1"/>
      </svg>
      <span class="tab-label">Docker</span>
      <% if (typeof docker !== 'undefined' && docker && docker.containers) { %>
        <span class="tab-badge"><%= docker.containers.length %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Proxmox Tab (conditional) -->
  <% if (discovery && discovery.is_proxmox_host) { %>
    <button class="tab-btn" data-tab="proxmox">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="3" width="20" height="14" rx="2"/>
        <line x1="2" y1="10" x2="22" y2="10"/>
        <line x1="12" y1="10" x2="12" y2="17"/>
      </svg>
      <span class="tab-label">Proxmox</span>
      <% if (typeof proxmox !== 'undefined' && proxmox && proxmox.vms) { %>
        <span class="tab-badge"><%= proxmox.vms.length + (proxmox.containers ? proxmox.containers.length : 0) %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Services Tab (conditional) -->
  <% if (discovery && discovery.has_systemd) { %>
    <button class="tab-btn" data-tab="services">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="8" y1="6" x2="21" y2="6"/>
        <line x1="8" y1="12" x2="21" y2="12"/>
        <line x1="8" y1="18" x2="21" y2="18"/>
        <line x1="3" y1="6" x2="3.01" y2="6"/>
        <line x1="3" y1="12" x2="3.01" y2="12"/>
        <line x1="3" y1="18" x2="3.01" y2="18"/>
      </svg>
      <span class="tab-label">Services</span>
      <% if (typeof services !== 'undefined' && services) { %>
        <span class="tab-badge"><%= services.length %></span>
      <% } %>
    </button>
  <% } %>

  <!-- System Tab -->
  <button class="tab-btn" data-tab="system">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="4" y="4" width="16" height="16" rx="2" ry="2"/>
      <rect x="9" y="9" width="6" height="6"/>
      <line x1="9" y1="1" x2="9" y2="4"/>
      <line x1="15" y1="1" x2="15" y2="4"/>
      <line x1="9" y1="20" x2="9" y2="23"/>
      <line x1="15" y1="20" x2="15" y2="23"/>
      <line x1="20" y1="9" x2="23" y2="9"/>
      <line x1="20" y1="14" x2="23" y2="14"/>
      <line x1="1" y1="9" x2="4" y2="9"/>
      <line x1="1" y1="14" x2="4" y2="14"/>
    </svg>
    <span class="tab-label">System</span>
  </button>

  <!-- Network Tab -->
  <button class="tab-btn" data-tab="network">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"/>
      <line x1="2" y1="12" x2="22" y2="12"/>
      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
    </svg>
    <span class="tab-label">Network</span>
  </button>

  <!-- Terminal Tab -->
  <button class="tab-btn" data-tab="terminal">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="4 17 10 11 4 5"/>
      <line x1="12" y1="19" x2="20" y2="19"/>
    </svg>
    <span class="tab-label">Terminal</span>
  </button>
</div>
