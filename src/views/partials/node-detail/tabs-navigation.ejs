<!-- Tab Navigation mit SVG-Icons -->
<div class="tabs">
  <!-- Übersicht Tab (vereint: Status, Verbindung, Hardware, Discovery) -->
  <button class="tab-btn active" data-tab="overview">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="7" height="7"/>
      <rect x="14" y="3" width="7" height="7"/>
      <rect x="14" y="14" width="7" height="7"/>
      <rect x="3" y="14" width="7" height="7"/>
    </svg>
    <span class="tab-label">Übersicht</span>
  </button>

  <!-- Docker Tab (conditional) -->
  <% if (discovery && discovery.has_docker) { %>
    <button class="tab-btn" data-tab="docker">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="6" width="20" height="12" rx="2"/>
        <line x1="12" y1="6" x2="12" y2="2"/>
        <circle cx="12" cy="2" r="1"/>
      </svg>
      <span class="tab-label">Docker</span>
      <% if (typeof docker !== 'undefined' && docker && docker.containers) { %>
        <span class="tab-badge"><%= docker.containers.length %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Proxmox Tab (conditional) -->
  <% if (discovery && discovery.is_proxmox_host) { %>
    <button class="tab-btn" data-tab="proxmox">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="3" width="20" height="14" rx="2"/>
        <line x1="2" y1="10" x2="22" y2="10"/>
        <line x1="12" y1="10" x2="12" y2="17"/>
      </svg>
      <span class="tab-label">Proxmox</span>
      <% if (typeof proxmox !== 'undefined' && proxmox && proxmox.vms) { %>
        <span class="tab-badge"><%= proxmox.vms.length + (proxmox.containers ? proxmox.containers.length : 0) %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Storage Tab (conditional - Proxmox hosts) -->
  <% if (discovery && discovery.is_proxmox_host) { %>
    <button class="tab-btn" data-tab="storage">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <ellipse cx="12" cy="5" rx="9" ry="3"/>
        <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/>
        <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>
      </svg>
      <span class="tab-label">Storage</span>
      <% if (typeof lvmData !== 'undefined' && lvmData && lvmData.summary) { %>
        <span class="tab-badge"><%= lvmData.summary.vg_count || 0 %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Backup Tab (conditional - Proxmox hosts) -->
  <% if (discovery && discovery.is_proxmox_host) { %>
    <button class="tab-btn" data-tab="backup">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
        <polyline points="17 8 12 3 7 8"/>
        <line x1="12" y1="3" x2="12" y2="15"/>
      </svg>
      <span class="tab-label">Backup</span>
      <% if (typeof backupData !== 'undefined' && backupData && backupData.summary) { %>
        <span class="tab-badge"><%= backupData.summary.total_backups || 0 %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Tasks Tab (conditional - Proxmox hosts) -->
  <% if (discovery && discovery.is_proxmox_host) { %>
    <button class="tab-btn" data-tab="tasks">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
        <polyline points="14 2 14 8 20 8"/>
        <line x1="16" y1="13" x2="8" y2="13"/>
        <line x1="16" y1="17" x2="8" y2="17"/>
        <polyline points="10 9 9 9 8 9"/>
      </svg>
      <span class="tab-label">Tasks</span>
      <% if (typeof tasksData !== 'undefined' && tasksData && tasksData.counts) { %>
        <span class="tab-badge"><%= tasksData.counts.running || 0 %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Services Tab (conditional) -->
  <% if (discovery && discovery.has_systemd) { %>
    <button class="tab-btn" data-tab="services">
      <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="8" y1="6" x2="21" y2="6"/>
        <line x1="8" y1="12" x2="21" y2="12"/>
        <line x1="8" y1="18" x2="21" y2="18"/>
        <line x1="3" y1="6" x2="3.01" y2="6"/>
        <line x1="3" y1="12" x2="3.01" y2="12"/>
        <line x1="3" y1="18" x2="3.01" y2="18"/>
      </svg>
      <span class="tab-label">Services</span>
      <% if (typeof services !== 'undefined' && services) { %>
        <span class="tab-badge"><%= services.length %></span>
      <% } %>
    </button>
  <% } %>

  <!-- Network Tab -->
  <button class="tab-btn" data-tab="network">
    <svg class="tab-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"/>
      <line x1="2" y1="12" x2="22" y2="12"/>
      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
    </svg>
    <span class="tab-label">Network</span>
  </button>

  <!-- Tab Actions -->
  <div class="tabs-actions">
    <button type="button" class="tab-action-btn" id="refreshTabBtn" title="Aktualisieren (F5)">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 2v6h-6"/>
        <path d="M3 12a9 9 0 0 1 15-6.7L21 8"/>
        <path d="M3 22v-6h6"/>
        <path d="M21 12a9 9 0 0 1-15 6.7L3 16"/>
      </svg>
    </button>
  </div>
</div>
