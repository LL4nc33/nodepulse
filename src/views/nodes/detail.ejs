                      <button class="btn btn-sm" title="Config" onclick="openConfigModal(<%= node.id %>, 'ct', <%= ct.ctid %>, '<%= ct.name || '' %>', <%= ct.cpu_cores %>, <%= Math.round((ct.memory_bytes || 0) / 1048576) %>)">
                        <span class="icon-edit"></span>
                      </button>
                      <button class="btn btn-sm" title="Clone" onclick="openCloneModal(<%= node.id %>, 'ct', <%= ct.ctid %>, '<%= ct.name || '' %>')">
                        <span class="icon-clone"></span>
                      </button>
                      <button class="btn btn-sm btn-warning" title="Template" onclick="confirmTemplate(<%= node.id %>, 'ct', <%= ct.ctid %>, '<%= ct.name || '' %>')">
                        <span class="icon-template"></span>
                      </button>
                    <% } else { %>
                      <button class="btn btn-sm" title="Clone" onclick="openCloneModal(<%= node.id %>, 'ct', <%= ct.ctid %>, '<%= ct.name || '' %>')">
                        <span class="icon-clone"></span>
                      </button>
