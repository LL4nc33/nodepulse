    <!-- Storage Section -->
    <div class="proxmox-section">
      <h3>Storage</h3>
      <% if (proxmox.storage.length === 0) { %>
        <p class="empty">Kein Storage vorhanden</p>
      <% } else { %>
        <div class="proxmox-table-wrapper">
          <table class="proxmox-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Typ</th>
                <th>Status</th>
                <th>Gesamt</th>
